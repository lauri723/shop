<% layout('layouts/boilerplate')%>

<div class="container container-cart">
    <div class="card-cart mb-5">
        <div class="card-body">
            <h1 class="text-center mb-4">Checkout</h1>

            <% let totalItems = 0; %>
            <% let subTotal = 0; %>
            <% if(listings){%>
            <% listings.map((listing) => { %>
            <div class="row cart-line-item">
                <table>
                    <tr class="text-end">
                        <td class="cart-item-title text-start"><%= listing.title %></td>
                        <td class="text-muted cart-price">
                            $<%= listing.price.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>&nbsp;
                            &nbsp; </a></td>
                        <td class="cart-qty">
                            <span>Qty</span>
                            <a class="plus-minus" href="/cart/update/<%= listing.id %>?action=min"><svg
                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-dash-square" viewBox="0 0 16 16">
                                    <path
                                        d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
                                </svg></a>
                            &nbsp;<%= listing.qty %>&nbsp;
                            <a class="plus-minus" href="/cart/update/<%= listing.id %>?action=add"><svg
                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-plus-square" viewBox="0 0 16 16">
                                    <path
                                        d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path
                                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                </svg></a>
                        </td>
                        <td class="cart-price-ext">
                            $<%= (listing.price * listing.qty).toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                        </td>
                        <td class="cart-trash">
                            <a href="/cart/update/<%= listing.id %>?action=clear"><svg
                                    xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                                    class="bi bi-trash" viewBox="0 0 16 16">
                                    <path
                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd"
                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg></a>
                        </td>
                    </tr>
                </table>
            </div>
            <% subTotal += listing.price * listing.qty %>
            <% }); %>
            <hr>
            <hr>

            <div class="container">
                <div class="row cart-bottom">
                    <div class="col-6 cart-contact">
                        <h2>COMPANY CONTACT INFO</h2>
                        <h4>Any disclainers and/or other pertinent stuff</h4>
                    </div>
                    <div class="col-6 cart-totals">
                        <div class="totals">
                            <table>
                                <!-- <thead>
                                    <th>Order</th>
                                </thead> -->
                                <tbody>
                                    <tr class="subtotal">
                                        <td class="td-left">Subtotal</td>
                                        <td class="td-right">
                                            $<%= subTotal.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                        </td>
                                    </tr>
                                    <tr class="shipHandle">
                                        <td class="td-left">Est Taxes</td>
                                        <td class="td-right">TBD</td>
                                    </tr>
                                    <tr class="shipHandle">
                                        <td class="td-left">Est Shipping and Handling</td>
                                        <td class="td-right">TBD</td>
                                    </tr>
                                    <tr class="Order-total">
                                        <td class="td-left">Order Total</td>
                                        <td class="td-right">
                                            $<%= subTotal.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <%}else{%>
                        <h3 class="text-center">You cart is empty</h3>
                        <%}%>
                        <div class="cart-btn mt-3">
                            <a href="/cart/checkout" class="btn btn-info btn-sm btn-cart-btn px-4" id="checkout">Checkout</a>
                            <a href="/cart/shop" class="btn btn-sm btn-success px-4">Back to Listings</a>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>    
</div>  